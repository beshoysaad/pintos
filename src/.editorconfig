# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space

# GNU C
[*.{c,h}]
indent_size = 2

# GNU make
# https://www.gnu.org/software/make/manual/html_node/Recipe-Syntax.html
[{Makefile,Makefile.*}]
indent_style = tab
